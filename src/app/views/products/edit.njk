{% extends "layout.njk" %}

{% block content %}
    <section class="container form">
        <form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">
            <div class="header">
                <h3>Editar Produto</h3>
            </div>

            <div class="fields">
                {% include "products/fields.njk" %}
                <input
                    type="hidden"
                    name="id"
                    value={{product.id}}
                >
            </div>

            <button class="btn update" type="submit">Atualizar</button>
        </form>

        <form id="form-delete" method="POST" action="/products?_method=DELETE">
            <input
                type="hidden"
                name="id"
                value={{product.id}}
            >

            <button class="btn delete" type="submit">Excluir</button>
        </form>
    </section>

    {% include "parts/delete-confirmation.njk" %}
{% endblock %}