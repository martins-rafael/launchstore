<div class="item">
    <div>Nome</div>
    <div class="input">
        <input
            type="text"
            name="name"
            placeholder="Digite seu nome completo"
            value="{{user.name}}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input
            type="password"
            name="password"
            placeholder="Escolha uma senha"
            value="{{user.password}}"
        >
    </div>
</div>

{% if not user.id %}
    <div class="item">
        <div>Repetir Senha</div>
        <div class="input">
            <input
                type="password"
                name="password_repeat"
                placeholder="Repita a senha escolhida"
            >
        </div>
    </div>
{% endif %}

<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input
            type="text"
            name="cpf_cnpj"
            placeholder="Digite seu documento"
            value="{{user.cpf_cnpj}}"
            onkeydown="Mask.apply(this, 'cpfCnpj')"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input
            type="text"
            name="cep"
            placeholder="12345-678"
            value="{{user.cep}}"
            onkeydown="Mask.apply(this, 'cep')"
        >
    </div>
</div>

<div class="item">
    <div>Endereço Completo</div>
    <div class="input">
        <input
            type="text"
            name="address"
            placeholder="Digite seu endereço completo"
            value="{{user.address}}"
        >
    </div>
</div>