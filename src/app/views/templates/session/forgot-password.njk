{% extends "layout.njk" %}
{% import "partials/card.njk" as card %}

{% block content %}
  {% call card.render("Esqueceu a senha?", "password container") %}
  <form method="POST" action="/users/forgot-password">
    <div class="fields">
      <div class="item">
        <div>Email</div>
        <div class="input">
          <input
            type="email"
            name="email"
            placeholder="Digite o email cadastrado"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
          >
        </div>
      </div>
    </div>

    <button class="btn" type="submit">Recuperar senha</button>
  </form>
  {% endcall %}
{% endblock %}
